<% provide :title, t("result.title") %>
<h3>
  <%= t "result.search", key: @key %>
</h3>
<hr>
<% if @users || @books %>
  <% if @books.any? %>
    <div class="row">
      <h2>
        <%= t "result.books" %>
      </h2>
      <div class="row" id="books">
        <%= render @books %>
      </div>
      <div class="row text-center" id="paginate-book">
        <%= paginate @books, theme: "twitter-bootstrap-3",
          param_name: :page_books %>
      </div>
    </div>
  <% end %>
  <hr>
  <% if @users.any? %>
    <div class="row">
      <h2>
        <%= t "result.users" %>
      </h2>
      <div class="row" id="users">
        <%= render @users %>
      </div>
      <div class="row text-center" id="paginate-book">
        <%= paginate @users, theme: "twitter-bootstrap-3",
          param_name: :page_users %>
      </div>
    </div>
  <% end %>
<% else %>
  <%= t "result.nil_result", key: @key %>
<% end %>
