<div class="col-md-2 col-xs-12 text-center" >
  
</div>
<div class="col-md-2 col-xs-12" id="avatar">

  <div class="form-group">
    <%= show_avatar @user, Settings.avatar_size %>
  </div>
  <div class="tooltip">
      <h4 class="user-name"><center ><%= @user.name %></center></h4>
      <h5><%= t ".birthday", birthday: @user.birthday %></h5>
      <h5><%= t ".address", address: @user.address %></h5>
      <div class="form-group">
        <%= link_to user_following_index_path(@user), data: {turbolinks: false} do %>
          <strong id="following">
            <%= @user.following.count %>
          </strong>
            <%= t ".following" %>
        <% end %>
        <strong> | </strong>
        <%= link_to user_followers_path(@user), data: {turbolinks: false} do %>
          <strong id="followers">
            <%= @user.followers.count %>
          </strong>
            <%= t ".followers" %>
        <% end %>
      </div>
  <div class="form-group" id="follow_form">
    <%= render "users/follow_form" if user_signed_in? %>
  </div>
  </div>
  
  
</div>
